% Huge Bold     ...     Normal
\newcommand{\lrHeader}[2]{
    \begin{lrColumns}
        \Huge{\textbf{#1}} & #2 \\
    \end{lrColumns}
}

% Bold          ...     Italicized
% Italicized    ...     Normal (optional)
% Italicized    ...     Normal (optional)
\NewDocumentCommand{\lr}{m m O{} O{} O{} O{}}{
  \begin{lrColumns}
        \textbf{#1} & \textit{#2} \\
        \ifblank{#3}{}{\textit{#3} & #4 \\}
        \ifblank{#5}{}{\textit{#5} & #6 \\}
  \end{lrColumns}
}

% Bold: Normal...
\newcommand{\labeledLine}[2]{ % TODO: Consider deprecating
    {\textbf{#1}{: #2}}
}

% Bulleted List (optional bullet style)
\NewDocumentEnvironment{bullets}{O{\bulletStyle}}{\begin{itemize}[label={#1}, leftmargin=1.5em]}{\end{itemize}} % TODO: Un-hard-code leftmargin

% Non-bulleted List
\newenvironment{nobullets}{\begin{itemize}[label={}, leftmargin=0pt]}{\end{itemize}}

% Section-ed List
\newenvironment{sectionList}[1]{\begin{nobullets}\setlength\itemsep{\sectionSpacing} \section{#1}}{\end{nobullets}}